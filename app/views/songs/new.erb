<h1> Song - New </h1>

<form action="/songs" method="POST">
  <p>
    <label>Name: </label>
    <input type="text" id="Name" name="song[name]">
  </p>

  <p>
  <label>Artist_name: </label>
  <input type="text" id="Artist Name" name="song[add_artist_by_name]">
  </p>

  <% @genres.each do |g| %>
    <input type="checkbox" name="song[genre_ids][]" id="<%= g.name %>" value="<%= g.id %>"><%= g.name %><br>
  <% end %>
  <br>
  <input type="submit" id="Create" value="Create">

</form>
